{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "node",
        "target": "ES2021",
        "noImplicitAny": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "declaration": true,
        "declarationDir": "types",
        "outDir": "out",
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "es2021.intl"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "@types",
        "src/Sideload/sideload.xts",
        "src/gui.xts"
    ],
}